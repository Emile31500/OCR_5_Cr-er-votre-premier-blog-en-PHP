{% extends 'layout.twig' %}
{% block title %}
    {{title}}
{% endblock %}
{% block style_sheet %}
    <link href="http://127.0.0.1/Projet%20OC5/Public/css/accueil.css" rel="stylesheet"/>
{% endblock %}  
{% block identification %}
    {# {% if user.nom is defined %}

        <span class="fs-5 text-light text-center">{{user.prenom}} {{user.nom }}</span><br>
        <a href="../utilisateur/sedeconnecter" id="btn-sedeconnecter" class="btn btn-light text-center"> Se déconntecter </a>

