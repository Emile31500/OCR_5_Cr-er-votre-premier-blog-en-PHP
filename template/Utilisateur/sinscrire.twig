{% extends 'layout.twig' %}
{% block title %}
    {{title}}
{% endblock %}
{% block style_sheet %}
{% endblock %}
{% block content%}
     <div class="section align-items-center">
        <form id="sing_form" action="../utilisateur/inscription" method="post">
            <div>
                <div class="form-group">
                    <label for="name">
                        Nom :
                    </label> 
                    <br>
                    <input require type="text" id="name" name="name"/>
                </div>
                <div class="form-group">
                    <label for="firstname">
                        Prénom : 
                    </label> 
                    <br>
                    <input require type="text" id="firstname" name="firstname">
                </div>
                <div class="form-group">
                    <label for="user_name">
                        Nom d'utilisateur : 
                    </label> 
                    <br>
                    <input require type="text" id="user_name" name="user_name">
                </div>
                <div class="form-group">
                    <label for="user_name">
                        Numéro de téléphone : 
                    </label> 
                    <br>
                    <input require type="tel" id="phone_number" name="phone_number">
                </div>
                <div class="form-group">
                    <label for="birth_day">
                        Date de naissance : 
                    </label> 
                    <br>
                    <input require type="date" id="birth_day" name="birth_day">
                </div>
                <div class="form-group">
                    <label for="email">
                        Email :
                    </label>
                    <br>
                    <input require type="email" id="email" name="email"> 
                </div>
                <div class="form-group">
                    <label for="password">
                        Mot de passe :
                    </label>
                    <br>
                    <input require type="password" id="password" name="password"> 
                </div>
                <div class="form-group">
                    <label for="confirm_password">
                        Confimer :
                    </label>
                    <br>
                    <input require type="password" id="confirm_password" name="confirm_password"> 
                </div>
                <div  class="form-group text-end">
                    <input class="btn btn-primary" type="submit">             
                </div>
                <div class="text-center">
                    <a class="text-primary" href="../utilisateur/seconnecter"> Déjà un compte ? Connectez-vous !</a>
                </div>
            </div>
            <div class="alert" id="notif_zone">
            </div>
        </form>
    </div>
{% endblock %}
{% block javascript_link %}
    <script src="http://127.0.0.1/Projet%20OC5/Public/JS/Utilisateur/register.js"></script>
{% endblock %}